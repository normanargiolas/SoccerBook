<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#5fb0c9"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="5dp">


        <ScrollView
            android:id="@+id/cerca_per_nome_scrol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cerca_per_nome_linear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:src="@drawable/position" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="50dp"

                        android:paddingTop="5dp"
                        android:text="Seleziona nome"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp">


                    <AutoCompleteTextView
                        android:id="@+id/cerca_per_nome_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="80dp"
                        android:layout_marginRight="80dp"
                        android:drawableTint="#565656"
                        android:hint="@string/cerca_per_nome_s"
                        android:singleLine="true" />


<!--                    <ImageView-->
<!--                        android:id="@+id/lente_nome_image_view"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_alignParentRight="true"-->
<!--                        android:layout_alignParentBottom="true"-->
<!--                        android:src="@mipmap/lente" />-->

                </RelativeLayout>


            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="5dp">


        <ScrollView
            android:id="@+id/cerca_per_comune_scrol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cerca_per_comune_linear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="0dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/hour_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="50dp"

                        android:paddingTop="5dp"
                        android:text="@string/seleziona_data"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                </RelativeLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp">


                    <AutoCompleteTextView
                        android:id="@+id/cerca_per_data_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="80dp"
                        android:drawableTint="#565656"
                        android:hint="@string/cerca_per_giorno_s"
                        android:focusable="false"
                        android:singleLine="true" />


                    <ImageView
                        android:id="@+id/lente_comune_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/lente" />

                </RelativeLayout>


            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="5dp">


        <ScrollView
            android:id="@+id/cerca_per_distanza_scrol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cerca_per_distanza_linear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="37dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/calendar_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="50dp"

                        android:paddingTop="5dp"
                        android:text="@string/seleziona_orario"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                </RelativeLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp">


                    <AutoCompleteTextView
                        android:id="@+id/cerca_per_orario_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="80dp"
                        android:drawableTint="#565656"
                        android:hint="@string/cerca_per_orario_s"
                        android:focusable="false"
                        android:singleLine="true" />


                    <ImageView
                        android:id="@+id/lente_distanza_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/lente" />

                </RelativeLayout>


            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="5dp">


        <ScrollView
            android:id="@+id/cerca_campo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cerca_campo_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Cerca"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimaryDark" />

        </ScrollView>


    </RelativeLayout>


</LinearLayout>