<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="it.namron.soccerbook.activity.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ball2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-110dp"
                    android:layout_marginBottom="-58dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="-40dp"
                    android:textColor="#D4E9FC"
                    android:text="SoccerBook" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:background="@color/white">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#66A9E0"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/home_id"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/calendar"
                            />

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#E4EEF9"
                            android:layout_marginTop="10dp"
                            android:text="Prenotazioni"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#66A9E0"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/pallone_id"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/star2"/>
                        <TextView
                            android:id="@+id/tvTitle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#E4EEF9"
                            android:layout_marginTop="10dp"
                            android:text="Preferiti"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:gravity="center"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#66A9E0"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/campo_id"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/campoo"/>
                        <TextView
                            android:id="@+id/tvTitle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#E4EEF9"
                            android:layout_marginTop="10dp"
                            android:text="Cerca Campo"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textAllCaps="true"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#66A9E0"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/maglia_id"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/maglia_icon2"/>

                        <TextView
                            android:id="@+id/tvTitle4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#E4EEF9"
                            android:layout_marginTop="10dp"
                            android:text="Forma squadra"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textAllCaps="true"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>
