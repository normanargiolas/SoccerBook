<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="it.namron.soccerbook.activity.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/colorAccent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="SoccerBook" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:background="@color/white">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/prenotazioni_id"
                        android:background="@color/white"
                        android:layout_marginTop="20dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/info_icon"
                        />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prenotazioni"
                        android:textSize="18sp"
                        android:textStyle="italic|bold"
                        android:gravity="center"/>


                    <ImageView
                        android:id="@+id/pallone_id"
                        android:background="@color/white"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/star"/>
                    <TextView
                        android:id="@+id/tvTitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Preferiti"
                        android:textSize="18sp"
                        android:textStyle="italic|bold"
                        android:gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/campo_id"
                        android:background="@color/white"
                        android:layout_marginTop="20dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@mipmap/menu_campo"/>
                    <TextView
                        android:id="@+id/tvTitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cerca Campo"
                        android:textSize="18sp"
                        android:textStyle="italic|bold"
                        android:gravity="center"
                        />


                    <ImageView
                        android:id="@+id/maglia_id"
                        android:background="@color/white"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/maglia_icon"/>

                    <TextView
                        android:id="@+id/tvTitle4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Forma squadra"
                        android:textSize="18sp"
                        android:textStyle="italic|bold"
                        android:gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>