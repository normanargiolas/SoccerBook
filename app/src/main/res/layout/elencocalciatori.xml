<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/field_btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Seleziona"
        android:textSize="@dimen/msg_button"


        tools:layout_editor_absoluteX="302dp"
        tools:layout_editor_absoluteY="119dp" />

    <ImageView
        android:id="@+id/field_image_icon"
        android:layout_width="117dp"
        android:layout_height="125dp"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_small"
        android:contentDescription="@string/a11y_plant_item_image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061"
        tools:src="@drawable/campo1" />

    <TextView
        android:id="@+id/field_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome squadra"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/msg_title_big"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/field_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Componenti: Mirko, Gianluca, "
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="58dp" />

</android.support.constraint.ConstraintLayout>